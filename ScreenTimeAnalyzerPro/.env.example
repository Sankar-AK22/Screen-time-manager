# ScreenTime Analyzer Pro - Environment Configuration

# Database
DATABASE_URL=sqlite:///./screentime.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Tracking Configuration
IDLE_THRESHOLD_SECONDS=180
TRACKING_INTERVAL_SECONDS=1
HEARTBEAT_INTERVAL_SECONDS=5

# Server Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS (for production, specify exact origins)
CORS_ORIGINS=*

# Optional: Database Retry Configuration
DB_MAX_RETRIES=3
DB_RETRY_DELAY=0.1

